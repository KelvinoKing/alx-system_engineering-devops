#!/usr/bin/env bash
# Install and configure HAProxy version 1.8 with the following settings:
# - Enable management via the init script.
# - Distribute requests using a round-robin algorithm.

# Install software-properties-common for add-apt-repository command
sudo apt-get update
sudo apt-get install -y software-properties-common

# Add HAProxy repository and update package list
sudo add-apt-repository -y ppa:vbernat/haproxy-1.8
sudo apt-get update

# Install HAProxy version 1.8
sudo apt-get install -y haproxy=1.8.*

# Enable HAProxy in /etc/default/haproxy
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy > /dev/null

# Backup the original haproxy.cfg and create a new one
sudo mv /etc/haproxy/haproxy.cfg{,.original}
sudo touch /etc/haproxy/haproxy.cfg

# Configure HAProxy with round-robin load balancing
sudo tee -a /etc/haproxy/haproxy.cfg > /dev/null <<EOL
global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

listen hbnb
    bind 0.0.0.0:80
    mode http
    stats enable
    stats uri /haproxy?stats
    balance roundrobin
    option httpclose
    option forwardfor
    server 331584-web-01 104.196.168.90:80 check
    server 331584-web-02 35.196.46.172:80 check
EOL

# Start the HAProxy service
sudo service haproxy start

# Check if HAProxy started successfully
if [ $? -eq 0 ]; then
    echo "HAProxy started successfully."
else
    echo "Failed to start HAProxy. Check the configuration."
fi
