#!/usr/bin/env bash
# Update package information
sudo apt-get update

# Install HAProxy
sudo apt-get install -y haproxy

# Define the backend servers
WEB_SERVER_1="331584-web-01"
WEB_SERVER_2="331584-web-02"

# Configure HAProxy
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOF
frontend web
    bind *:80
    mode http
    default_backend web_servers

backend web_servers
    mode http
    balance roundrobin
    server  $WEB_SERVER_1 54.157.190.140:80 check
    server  $WEB_SERVER_2 52.23.179.51:80 check
EOF

# Restart HAProxy
sudo service haproxy restart

# Enable HAProxy to start on boot
sudo systemctl enable haproxy
