#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me redirects to another page.

echo "<html><head><meta http-equiv=\"refresh\" content=
\"0;url=https://www.youtube.com/watch?v=QH2-TGUlwu4\"></head></html>" | tee /var/www/html/redirect_me.html

cat <<EOF | tee /etc/nginx/sites-available/default
server {
    listen 80;
    server_name _;

    location / {
        root /var/www/html;
        index index.html;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF

service nginx restart
